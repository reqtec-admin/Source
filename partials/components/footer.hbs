<footer class="gh-footer{{#match @custom.header_and_footer_color "Accent color"}} has-accent-color{{/match}} gh-outer">
    <div class="gh-footer-inner gh-inner">



        {{#if @site.members_enabled}}
            {{#unless @member}}
                <section class="gh-footer-signup">
                    <h2 class="gh-footer-signup-header is-title">
                        {{#if @custom.signup_heading}}{{@custom.signup_heading}}{{else}}{{@site.title}}{{/if}}
                    </h2>
                    <p class="gh-footer-signup-subhead is-body">
                        {{#if @custom.signup_subheading}}{{@custom.signup_subheading}}{{else}}{{@site.description}}{{/if}}
                    </p>
                    {{> "email-subscription" email_field_id="footer-email"}}
                </section>
            {{/unless}}
        {{/if}}

        <section class="gh-footer-partners">
            <h2 class="gh-footer-partners-header is-title">Trusted Partners</h2>
            <div class="gh-footer-partners-grid">
                <a href="https://www.pip.com/omahane947/products-services/printing-copying/labels%2C-stickers%2C-decals" class="gh-footer-partner" target="_blank" rel="noopener">
                    <img src="{{asset 'images/partner-pip-logo.png'}}" alt="Pip Marketing" class="gh-footer-partner-logo">
                    <span class="gh-footer-partner-name">Pip Marketing</span>
                </a>
                <a href="https://besavvy.today" class="gh-footer-partner" target="_blank" rel="noopener">
                    <img src="{{asset 'images/partner-besavvy-logo.png'}}" alt="Savvy Enterprises" class="gh-footer-partner-logo">
                    <span class="gh-footer-partner-name">Savvy Enterprises</span>
                </a>
                <a href="https://campaign-craft.com" class="gh-footer-partner" target="_blank" rel="noopener">
                    <img src="{{asset 'images/partner-campaigncraft-logo.png'}}" alt="Campaign Craft" class="gh-footer-partner-logo">
                    <span class="gh-footer-partner-name">Campaign Craft</span>
                </a>
            </div>
        </section>

        <div class="gh-footer-bar">
            <span class="gh-footer-logo is-title">
                {{#if @site.logo}}
                    <img src="{{@site.logo}}" alt="{{@site.title}}">
                {{else}}
                    {{@site.title}}
                {{/if}}
            </span>
            <nav class="gh-footer-menu">
                <ul class="nav">
                    <li class="nav-sign-up"><a href="#/portal">© 2025 Commit 250™ All Rights Reserved</a></li>
                    <li class="nav-sign-up">Built on <a href="https://reqtec.com/" target="_blank" rel="noopener">REQtec™</a></li>
                </ul>
            </nav>
            <div class="gh-footer-copyright">
                Powered by <a href="https://ghost.org/" target="_blank" rel="noopener">Ghost</a>
            </div>
        </div>
    </div>
</footer>